{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmitOnError": false, // still emit files on errors
    "skipLibCheck": true, // skip checking of declaration files (usually 3rd party libs)
    "strict": false, // disable all strict checks (including noImplicitAny, strictNullChecks)
    "noImplicitAny": false, // allow implicit any types
    "noUnusedLocals": false, // do not error on unused variables/imports
    "noUnusedParameters": false,
  },
  "include": [
    "vite.config.ts"
  ]
}